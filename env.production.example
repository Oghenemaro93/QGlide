# QGlide Production Environment Variables
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=production
DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Allowed Hosts (update with your Cloud Run URL)
ALLOWED_HOSTS=your-service-url.run.app,localhost

# Database Configuration (Cloud SQL)
# For Cloud Run + Cloud SQL over Unix socket, use:
# DATABASE_HOST=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME
# Example:
# DATABASE_HOST=/cloudsql/qglide-472613:us-central1:qglide-db
DATABASE_NAME=qglide_prod
DATABASE_USER=qglide_user
DATABASE_PASSWORD=your-secure-database-password
DATABASE_HOST=/cloudsql/qglide-472613:us-central1:qglide-db
DATABASE_PORT=5432

# CORS / CSRF Configuration
# Set your frontend origin(s) exactly (no trailing slash). Comma separate if multiple.
# Examples:
# CORS_ALLOWED_ORIGINS=https://your-frontend.com,http://localhost:3000
CORS_ALLOWED_ORIGINS=https://your-frontend.com
CSRF_TRUSTED_ORIGINS=https://your-service-url.run.app,https://your-frontend.com
CSRF_COOKIE_DOMAIN=your-service-url.run.app
SECURE_SSL_REDIRECT=True

# Email Configuration (MailerSend)
MAILERSEND_API_KEY=your-mailersend-api-key
MAILERSEND_DOMAIN=your-domain.com

# SMS Configuration (Brevor)
BREVOR_API_KEY=your-brevor-api-key

# Google OAuth (if using)
GOOGLE_SSO_CLIENT_ID=your-google-client-id
GOOGLE_SSO_CLIENT_SECRET=your-google-client-secret
GOOGLE_SSO_PROJECT_ID=your-google-project-id

# Cloud Run Configuration
PORT=8080
